{
    "log_level": "info",
    "server": {
        "host": "localhost",
        "port": 8080
    },
    "git": {
        "update_seconds": 600,
        "repository": "https://github.com/emvi/shifu-demo.git"
    },
    "storage": {
        "provider": "s3",
        "path_prefix": "demo",
        "url": "fsn1.your-objectstorage.com",
        "bucket": "emvi",
        "access_key": "${S3_ACCESS_KEY}",
        "secret": "${S3_SECRET}"
    },
    "content": {
        "provider": "s3",
        "not_found": {
            "en": "/not-found"
        }
    },
    "sass": {
        "dir": "assets",
        "entrypoint": "style.scss",
        "out": "static/bundle.css",
        "out_source_map": "static/bundle.css.map",
        "watch": true,
        "compiler": "sass"
    },
    "js": {
        "dir": "assets",
        "entrypoint": "entrypoint.js",
        "out": "static/bundle.js",
        "source_map": true,
        "watch": true
    }
}

{
    "log_level": "info",
    "server": {
        "host": "localhost",
        "port": 8080,
        "secure_cookies": true
    },
    "api": {
        "secret": "${API_SECRET}"
    },
    "remote": {
        "url": "https://shifu.emvi.com",
        "secret": "${API_SECRET}"
    },
    "git": {
        "update_seconds": 600,
        "repository": "https://github.com/emvi/shifu-demo.git"
    },
    "content": {
        "provider": "git",
        "not_found": {
            "en": "/not-found"
        }
    },
    "sass": {
        "dir": "assets",
        "entrypoint": "style.scss",
        "out": "static/bundle.css",
        "out_source_map": "static/bundle.css.map",
        "watch": true,
        "compiler": "sass"
    },
    "js": {
        "dir": "assets",
        "entrypoint": "entrypoint.js",
        "out": "static/bundle.js",
        "source_map": true,
        "watch": true
    },
    "ui": {
        "path": "/admin",
        "admin_password": "admin"
    }
}
